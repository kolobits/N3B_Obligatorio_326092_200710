@model AppCliente.Models.Envio.EnvioDto

@{
    ViewData["Title"] = "Buscar Envío por Tracking";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h4 class="text-center text-primary mb-4">@ViewData["Title"]</h4>

                <form asp-action="BuscarPorTracking" method="get">
                    <div class="mb-3">
                        <label for="tracking" class="form-label">Número de Tracking</label>
                        <input type="text" name="tracking" id="tracking" class="form-control" required />
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Message</div>
                }

                @if (Model != null)
                {
                    <hr />
                    <h5 class="text-secondary">Detalle del Envío</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Tracking</dd>

                        <dt class="col-sm-4">Peso</dt>
                        <dd class="col-sm-8">@Model.Peso</dd>

                        <dt class="col-sm-4">Tipo</dt>
                        <dd class="col-sm-8">@Model.Tipo</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Model.Estado</dd>

                        <dt class="col-sm-4">Fecha de Creación</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion</dd>

                        <dt class="col-sm-4">Fecha de Finalización</dt>
                        <dd class="col-sm-8">@Model.FechaFinalizacion</dd>

                        <dt class="col-sm-4">Último Comentario</dt>
                        <dd class="col-sm-8">@Model.UltimoComentario</dd>
                    </dl>
                }
            </div>
        </div>
    </div>
</div>
