@model List<AppCliente.Models.Envio.SeguimientoDto>

@{
    ViewData["Title"] = "Seguimientos del Envío";
}

<div class="container mt-4">
    <h2 class="text-primary">@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
    else if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Este envío no tiene seguimientos aún.</div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Comentario</th>
                        <th>Estado</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var seguimiento in Model)
                    {
                        <tr>
                            <td>@seguimiento.Comentario</td>
                            <td>@seguimiento.Estado</td>
                            <td>@seguimiento.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</div>
