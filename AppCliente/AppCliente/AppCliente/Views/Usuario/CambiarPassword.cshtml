@using AppCliente.Models.Usuario
@model CambioPasswordDto

@{
    ViewData["Title"] = "Cambio de contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

                @if (ViewBag.mensaje != null)
                {
                    var esExito = ViewBag.mensaje.ToString().Contains("correctamente");
                    <div class="alert @(esExito ? "alert-success" : "alert-danger") text-center" role="alert">
                        @ViewBag.mensaje
                    </div>
                }


                <form asp-action="CambiarPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="PasswordActual" class="form-label"></label>
                        <input asp-for="PasswordActual" type="password" class="form-control" />
                        <span asp-validation-for="PasswordActual" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="PasswordNueva" class="form-label"></label>
                        <input asp-for="PasswordNueva" type="password" class="form-control" />
                        <span asp-validation-for="PasswordNueva" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Aceptar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}