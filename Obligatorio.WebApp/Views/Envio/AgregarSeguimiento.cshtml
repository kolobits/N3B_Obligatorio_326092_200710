@model Obligatorio.WebApp.Models.VMSeguimiento

@{
    ViewData["Title"] = "Crear Seguimiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow p-4">
                <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

                <form asp-action="AgregarSeguimiento">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Comentario" class="control-label"></label>
                        <input asp-for="Comentario" class="form-control" />
                        <span asp-validation-for="Comentario" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Fecha" class="control-label"></label>
                        <input asp-for="Fecha" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger small"></span>
                    </div>

                               
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-danger">Volver</a>
                        <button type="submit" class="btn btn-success" id="btnCrearSeguimiento">Crear Seguimineto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 }