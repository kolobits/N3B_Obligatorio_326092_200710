@model Obligatorio.WebApp.Models.VMSeguimiento

@{
    ViewData["Title"] = "Nuevo Seguimiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" name="EnvioId" value="@Model.EnvioId" />

                    <div class="mb-3">
                        <label asp-for="Comentario" class="form-label"></label>
                        <textarea asp-for="Comentario" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-controller="Envio" class="btn btn-outline-danger">Volver</a>
                        <button type="submit" class="btn btn-success">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
