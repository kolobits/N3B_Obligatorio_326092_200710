@model Obligatorio.CasoDeUsoCompartida.DTOs.Usuarios.UsuarioListadoDto

@{
    ViewData["Title"] = "Detalle del Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-sm p-4">
                <h3 class="text-center text-primary mb-4">@ViewData["Title"]</h3>

                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Apellido</dt>
                    <dd class="col-sm-8">@Model.Apellido</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
